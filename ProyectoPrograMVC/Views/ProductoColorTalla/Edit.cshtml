@model ProductoColorTalla
@{
    ViewData["Title"] = "Detalles Producto";
}

<h1>@ViewData["Title"]</h1>
<p>En esta página se editan los detalles de los Productos.</p>

<form method="post" >
    <div class="mb-3">
        <label class="form-label">Codigo del Producto</label>
        <input asp-for="idProductoColorTalla" class="form-control " readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo producto Nombre</label>
        <input asp-for="Producto.nombre" class="form-control " readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Color</label>
        <input asp-for="ColorProducto.nombre" class="form-control " readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Talla</label>
        <input asp-for="TallaProducto.talla" class="form-control " readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="stock" class="form-control "/>
    </div>
    <div class="mb-3">
        <label class="form-label">Stock Minimo</label>
        <input asp-for="stockMin" class="form-control " />
    </div>
    <div class="mb-3">
        <label class="form-label">Stock Maximo</label>
        <input asp-for="stockMax" class="form-control " />
    </div>
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="precio" class="form-control " />
    </div>
   
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6">
            <a asp-action="Cancelar" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>
